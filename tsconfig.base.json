{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@cg/types": ["packages/@cg/types/src"],
      "@cg/utils": ["packages/@cg/utils/src"],
      "@cg/config": ["packages/@cg/config/src"],
      "@cg/convex-client": ["packages/@cg/convex-client/src"],
      "@cg/database": ["packages/database/src"],
      "convex": ["packages/convex"],
      "convex/*": ["packages/convex/*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dist",
    "build",
    ".next",
    "out",
    "_generated",
    "**/_generated"
  ]
}
