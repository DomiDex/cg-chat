{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env"],
  "globalEnv": [
    "NODE_ENV",
    "CONVEX_URL",
    "CONVEX_DEPLOYMENT",
    "NEXT_PUBLIC_CONVEX_URL"
  ],
  "tasks": {
    "convex:codegen": {
      "cache": false,
      "outputs": ["packages/convex/_generated/**"]
    },
    "build": {
      "dependsOn": ["^build", "convex:codegen"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**",
        "_generated/**"
      ],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*", "DATABASE_URL", "CONVEX_DEPLOYMENT"]
    },
    "dev": {
      "dependsOn": ["convex:codegen"],
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "dependsOn": ["convex:codegen"],
      "outputs": [],
      "cache": false
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "test:unit": {
      "outputs": ["coverage/**"],
      "cache": false
    },
    "test:integration": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
