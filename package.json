{
  "name": "cg-chat",
  "version": "1.0.0",
  "private": true,
  "description": "Computer Guys AI-powered customer service chatbot",
  "author": "Computer Guys Development Team",
  "license": "PROPRIETARY",
  "engines": {
    "node": ">=20.18.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "pnpm": {
    "onlyBuiltDependencies": [
      "husky"
    ],
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "19",
        "react-dom": "19"
      }
    }
  },
  "scripts": {
    "dev": "turbo dev --parallel",
    "build": "turbo build",
    "build:types": "node scripts/build-with-types.js",
    "clean": "turbo clean && rm -rf node_modules",
    "type-check": "node scripts/type-check.js",
    "type-check:turbo": "turbo type-check",
    "lint": "pnpm exec eslint . --config eslint.config.mjs",
    "lint:fix": "pnpm exec eslint . --config eslint.config.mjs --fix",
    "lint:turbo": "turbo lint",
    "lint:turbo:fix": "turbo lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:packages": "pnpm -r --parallel lint",
    "lint:staged": "lint-staged",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "test:integration": "turbo test:integration",
    "test:e2e": "turbo test:e2e",
    "convex:dev": "pnpm --filter convex dev",
    "convex:deploy": "pnpm --filter convex deploy",
    "convex:codegen": "pnpm --filter convex codegen",
    "web:dev": "pnpm --filter web dev",
    "api:dev": "pnpm --filter api dev",
    "prepare": "husky",
    "postinstall": "pnpm run validate:env",
    "validate:env": "node scripts/validate-env.js",
    "deps:check": "pnpm outdated --recursive",
    "deps:update": "pnpm update --recursive --interactive",
    "reset": "pnpm clean && rm -rf pnpm-lock.yaml && pnpm install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.31.0",
    "@next/eslint-plugin-next": "15.4.1",
    "@types/node": "^24.0.14",
    "eslint": "9.31.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-no-secrets": "2.2.1",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.4",
    "eslint-plugin-turbo": "2.5.6",
    "eslint-plugin-unicorn": "60.0.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "globals": "16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "8.39.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
